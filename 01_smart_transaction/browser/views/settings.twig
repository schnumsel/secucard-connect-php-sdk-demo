{% extends "app.twig" %}

{% block title %}Settings - {{ parent() }}{% endblock %}

{% block content %}

    <h1>Settings</h1>

    <div class="row">

        <div class="col-md-6">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Auth (Client credentials)</h3>
                </div>

                <form class="form-horizontal" method="POST" action="">

                    <div class="panel-body">


                        <div class="form-group">
                            <label for="inputId" class="col-md-4 control-label">Client-ID</label>
                            <div class="col-md-8">
                                <input name="client_id" value="{{ client_id }}" type="text" class="form-control" id="inputId" placeholder="client id">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputSecret" class="col-md-4 control-label">Client-Secret</label>
                            <div class="col-md-8">
                                <input name="client_secret" value="{{ client_secret }}" type="text" class="form-control" id="inputSecret" placeholder="client secret">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputHost" class="col-md-4 control-label">Host</label>
                            <div class="col-md-8">
                                <input name="server_host" value="{{ server_host }}" type="text" class="form-control" id="inputHost" placeholder="connect.secucard.com">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputRefreshToken" class="col-md-4 control-label">Refresh token</label>
                            <div class="col-md-8">
                                <input name="refresh_token" value="{{ refresh_token }}" type="text" class="form-control" id="inputRefreshToken">
                            </div>
                        </div>

                    </div>

                    <div class="panel-footer">
                        <button type="submit" class="btn btn-default">Save</button>
                    </div>

                </form>

            </div>
        </div>

    </div>

{% endblock %}