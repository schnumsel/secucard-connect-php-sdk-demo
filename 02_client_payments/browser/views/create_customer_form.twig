<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">New Customer</h3>
    </div>

    <form class="form-horizontal" method="POST" action="">

        <div class="panel-body">


            <div class="col-md-6">

                <div class="form-group">
                    <label for="inputSalutation" class="col-sm-2 control-label">Salutation</label>
                    <div class="col-sm-10">
                        <select name="salutation" class="form-control" id="inputSalutation">
                            <option value="Herr">Herr</option>
                            <option value="Frau">Frau</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputTitle" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <select name="title" class="form-control" id="inputTitle">
                            <option value="Dr.">Dr.</option>
                            <option value="Dr. Med.">Dr. Med.</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputForename" class="col-sm-2 control-label">Forename</label>
                    <div class="col-sm-10">
                        <input name="forename" value="{{ form.forename }}" type="text" class="form-control" id="inputForename" placeholder="Forename">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputSurname" class="col-sm-2 control-label">Surname</label>
                    <div class="col-sm-10">
                        <input name="surname" value="{{ form.surname }}" type="text" class="form-control" id="inputSurname" placeholder="Surname">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputCompanyname" class="col-sm-2 control-label">Company name</label>
                    <div class="col-sm-10">
                        <input name="companyname" value="{{ form.companyname }}" type="text" class="form-control" id="inputCompanyname" placeholder="Company name">
                    </div>
                </div>

            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <span class="col-sm-2 control-label">Birth</span>
                    <div class="col-sm-10">
                        <div class="form-group row">
                            <label for="inputDob" class="col-sm-2 control-label">Date</label>
                            <div class="col-md-4">
                                <input name="dob" value="{{ form.dob }}" type="date" class="form-control" id="inputDob" placeholder="1975-03-21">
                            </div>
                            <label for="inputBirthplace" class="col-sm-2 control-label">Place</label>
                            <div class="col-md-4">
                                <input name="birthplace" value="{{ form.birthplace }}" type="text" class="form-control" id="inputBirthplace" placeholder="Birthplace">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-sm-2 control-label">Address</span>
                    <div class="col-sm-10">
                        <div class="form-group row">
                            <label for="inputStreet" class="col-md-2 control-label">Street</label>
                            <div class="col-md-6">
                                <input name="street" value="{{ form.street }}" type="text" class="form-control" id="inputStreet" placeholder="Street">
                            </div>
                            <label for="inputStreetNo" class="col-md-2 control-label">Street Number</label>
                            <div class="col-md-2">
                                <input name="street_number" value="{{ form.street_number }}" type="text" class="form-control" id="inputStreetNo" placeholder="">
                            </div>
                        </div>
                    </div>
                    <span class="col-sm-2 control-label"></span>
                    <div class="col-sm-10">
                        <div class="form-group row">
                            <label for="inputPostalcode" class="col-md-2 control-label">Postal Code</label>
                            <div class="col-md-3">
                                <input name="postal_code" value="{{ form.postal_code }}" type="text" class="form-control" id="inputPostalcode" placeholder="">
                            </div>
                            <label for="inputCity" class="col-md-2 control-label">City</label>
                            <div class="col-md-5">
                                <input name="city" value="{{ form.city }}" type="text" class="form-control" id="inputCity" placeholder="City">
                            </div>
                            <!--label for="inputCountry" class="col-md-2 control-label">Country</label>
                            <div class="col-md-5">
                                <input name="country" value="{{ form.country }}" type="text" class="form-control" id="inputCountry" placeholder="Deutschland">
                            </div-->
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input name="email" value="{{ form.email }}" type="text" class="form-control" id="inputEmail" placeholder="Email">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPhone" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-10">
                        <input name="phone" value="{{ form.phone }}" type="text" class="form-control" id="inputPhone" placeholder="Phone">
                    </div>
                </div>

            </div>

        </div>

        <div class="panel-footer">
                <button type="submit" class="btn btn-default">Save</button>
        </div>

    </form>

</div>
